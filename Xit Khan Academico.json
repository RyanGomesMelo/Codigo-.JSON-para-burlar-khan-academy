javascript: (function() {
    let originalParse = JSON.parse;
    console.log("if you look in the console you WILL see an error, they save it as a question though so I'm not worried about it right now.");
    JSON.parse = function(t, e) {
        let o = originalParse(t, e);
        try {
            const itemData = JSON.parse(o.data.assessmentItem.item.itemData);
            if (itemData.question && itemData.question.content && itemData.question.content[0] === itemData.question.content[0].toUpperCase()) {
                console.log(itemData);
                itemData.question.content = "Please select a answer choice.\n [[☃ radio 0]] [[☃ explanation 0]]";
                itemData.question.widgets = {
                    "radio 0": {
                        options: {
                            choices: [
                                { content: "Correto", correct: true },
                                { content: "Incorreto", correct: false }
                            ]
                        }
                    },
                    "explanation 0": {
                        options: {
                            explanation: "This hack was made by Ryan Gomes on GitHub.",
                            hidePrompt: "",
                            showPrompt: "Credit"
                        }
                    }
                };
                o.data.assessmentItem.item.itemData = JSON.stringify(itemData);
            }
        } catch (error) {
            console.error(error);
        }
        return o;
    };
    location.softReload = () => {
        const html = document.getElementsByTagName("html")[0].outerHTML;
        document.open();
        document.write(html);
        document.close();
    };
    location.softReload();
})();
